<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_HolidayNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Holiday Notes"
            app:layout_constraintStart_toStartOf="@+id/text_HolidayName"
            app:layout_constraintTop_toBottomOf="@+id/label_HolidayStartLoc" />

        <TextView
            android:id="@+id/label_HolidayEndLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:text="ending loc"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/label_HolidayLocation"
            app:layout_constraintTop_toTopOf="@+id/label_HolidayStartLoc" />

        <TextView
            android:id="@+id/label_HolidayStartLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="starting loc"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/text_HolidayName"
            app:layout_constraintTop_toBottomOf="@+id/text_HolidayName" />

        <TextView
            android:id="@+id/label_HolidayLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:text="to"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/label_HolidayStartLoc"
            app:layout_constraintStart_toEndOf="@+id/label_HolidayStartLoc"
            app:layout_constraintTop_toTopOf="@+id/label_HolidayStartLoc" />

        <TextView
            android:id="@+id/label_holidayImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Images"
            app:layout_constraintStart_toStartOf="@+id/scrollview_notes"
            app:layout_constraintTop_toBottomOf="@+id/scrollview_notes" />

        <TextView
            android:id="@+id/label_holidayMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Map"
            app:layout_constraintStart_toStartOf="@+id/scrollview_images"
            app:layout_constraintTop_toBottomOf="@+id/scrollview_images" />

        <TextView
            android:id="@+id/label_holidayPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Travel Companions"
            app:layout_constraintStart_toStartOf="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <ScrollView
            android:id="@+id/scrollview_notes"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_HolidayNotes">

            <TextView
                android:id="@+id/text_holidayNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holiday Notes" />

        </ScrollView>

        <HorizontalScrollView
            android:id="@+id/scrollview_images"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="@+id/scrollview_notes"
            app:layout_constraintStart_toStartOf="@+id/label_holidayImages"
            app:layout_constraintTop_toBottomOf="@+id/label_holidayImages">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="@string/btnlbl_photo" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="@string/btnlbl_photo" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="@string/btnlbl_photo" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="@string/btnlbl_photo" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="@string/btnlbl_photo" />

            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:text="Map"
            app:layout_constraintEnd_toEndOf="@+id/scrollview_images"
            app:layout_constraintStart_toStartOf="@+id/label_holidayMap"
            app:layout_constraintTop_toBottomOf="@+id/label_holidayMap" />

        <ScrollView
            android:id="@+id/scrollview_travellers"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_holidayPeople">

            <TextView
                android:id="@+id/text_holidayCompanions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holiday Travel Companions" />

        </ScrollView>

        <TextView
            android:id="@+id/text_HolidayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Your Holiday"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
